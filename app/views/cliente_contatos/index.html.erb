<div class="page-header">
  <%= link_to new_cliente_contato_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Cliente contato
  <% end %>
  <h1>Lista</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Cliente</th>
            <th>Nome</th>
            <th>Telefone</th>
            <th>Email</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @cliente_contatos) do |cliente_contato| %>
            <td><%= cliente_contato.cliente %></td>
            <td><%= cliente_contato.nome %></td>
            <td><%= cliente_contato.telefone %></td>
            <td><%= cliente_contato.email %></td>
            <td><%= link_to 'Mostrar', cliente_contato %></td>
        <td><%= link_to 'Editar', edit_cliente_contato_path(cliente_contato) %></td>
        <td><%= link_to 'Apagar', cliente_contato, method: :delete, data: { confirm: 'Confirma ?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
