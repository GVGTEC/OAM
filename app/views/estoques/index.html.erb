<div class="page-header">
  <h1>Lista de Estoque</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Produto</th>
        <th>Lote</th>
        <th>Estoque Atual</th>
        <th>Estoque Minimo</th>
        <th>Estoque Reservado</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @estoques) do |estoque| %>
        <td><%= estoque.produto.descricao %></td>
        <td><%= estoque.lote %></td>
        <td><%= estoque.estoque_atual %></td>
        <td><%= estoque.estoque_minimo %></td>
        <td><%= estoque.estoque_reservado %></td>
      <% end %>
    </tbody>
  </table>
</div>
