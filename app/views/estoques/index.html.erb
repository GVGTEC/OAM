<div class="page-header">
  <%= link_to new_estoque_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Estoque
  <% end %>
  <h1>Lista</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Produto</th>
            <th>Lote</th>
            <th>Estoque atual</th>
            <th>Estoque minimo</th>
            <th>Estoque reservado</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @estoques) do |estoque| %>
            <td><%= estoque.produto %></td>
            <td><%= estoque.lote %></td>
            <td><%= estoque.estoque_atual %></td>
            <td><%= estoque.estoque_minimo %></td>
            <td><%= estoque.estoque_reservado %></td>
            <td><%= link_to 'Mostrar', estoque %></td>
        <td><%= link_to 'Editar', edit_estoque_path(estoque) %></td>
        <td><%= link_to 'Apagar', estoque, method: :delete, data: { confirm: 'Confirma ?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
