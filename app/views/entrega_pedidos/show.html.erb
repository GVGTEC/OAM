<h3>Entrega Pedido</h3>

<div class="page-header">
  <%= link_to  pedido_pedido_item_entrega_pedidos_path(@pedido, @item), class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Voltar
  <% end %>
  <%= link_to edit_pedido_pedido_item_entrega_pedido_path(@pedido, @item, @entrega), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Editar
  <% end %>
  <h3>Mostrar</h3>
</div>

<dl class="dl-horizontal">
  <dt>Pedido:</dt>
  <dd><%= @pedido.id %></dd>
  <dt>Cliente:</dt>
  <dd><%= @pedido.cliente.nome %></dd>
  <dt>Produto:</dt>
  <dd><%= @item.produto.descricao %></dd>
  <dt>Data entrega:</dt>
  <dd><%= @entrega.data_entrega %></dd>
  <dt>Quantidade pedido:</dt>
  <dd><%= @entrega.quantidade_pedido %></dd>
  <dt>Quantidade inicial:</dt>
  <dd><%= @entrega.quantidade_inicial %></dd>
  <dt>Quantidade entregue:</dt>
  <dd><%= @entrega.quantidade_entregue %></dd>
  <dt>Quantidade final:</dt>
  <dd><%= @entrega.quantidade_final %></dd>
</dl>
