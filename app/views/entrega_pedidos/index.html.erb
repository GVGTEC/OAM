<h3>Entregas Pedidos</h3>

<div class="page-header">
  <%= link_to new_pedido_pedido_item_entrega_pedido_path(@pedido, @item), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo
  <% end %>
  <h3>Lista</h3>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Pedido</th>
            <th>Cliente</th>
            <th>Produto</th>
            <th>Data Entrega</th>
            <th>Qtde Pedido</th>
            <th>Qtde Inicial</th>
            <th>Qtde Entregue</th>
            <th>Qtde Final</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @entregas) do |entrega| %>
            <td><%= entrega.pedido %></td>
            <td><%= entrega.cliente %></td>
            <td><%= entrega.produto %></td>
            <td><%= entrega.data_entrega %></td>
            <td><%= entrega.quantidade_pedido %></td>
            <td><%= entrega.quantidade_inicial %></td>
            <td><%= entrega.quantidade_entregue %></td>
            <td><%= entrega.quantidade_final %></td>
            <td><%= link_to 'Mostrar', pedido_pedido_item_entrega_pedido_path(@pedido, @item, entrega) %></td>
        <td><%= link_to 'Editar', edit_pedido_pedido_item_entrega_pedido_path(@pedido, @item, entrega) %></td>
        <td><%= link_to 'Apagar', pedido_pedido_item_entrega_pedido_path(@pedido, @item, entrega), method: :delete, data: { confirm: 'Confirma ?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
