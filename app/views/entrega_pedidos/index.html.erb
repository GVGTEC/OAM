<h3>Entregas Pedidos</h3>

<div class="page-header">
  <%= link_to new_entrega_pedido_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo
  <% end %>
  <h3>Lista</h3>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Pedido</th>
            <th>Cliente</th>
            <th>Produto</th>
            <th>Data entrega</th>
            <th>Quantidade pedido</th>
            <th>Quantidade inicial</th>
            <th>Quantidade entregue</th>
            <th>Quantidade final</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @entrega_pedidos) do |entrega_pedido| %>
            <td><%= entrega_pedido.pedido %></td>
            <td><%= entrega_pedido.cliente %></td>
            <td><%= entrega_pedido.produto %></td>
            <td><%= entrega_pedido.data_entrega %></td>
            <td><%= entrega_pedido.quantidade_pedido %></td>
            <td><%= entrega_pedido.quantidade_inicial %></td>
            <td><%= entrega_pedido.quantidade_entregue %></td>
            <td><%= entrega_pedido.quantidade_final %></td>
            <td><%= link_to 'Mostrar', entrega_pedido %></td>
        <td><%= link_to 'Editar', edit_entrega_pedido_path(entrega_pedido) %></td>
        <td><%= link_to 'Apagar', entrega_pedido, method: :delete, data: { confirm: 'Confirma ?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
