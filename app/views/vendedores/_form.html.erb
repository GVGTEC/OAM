<%= form_for(@vendedor, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @vendedor.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4>Confira os campos abaixo:</h4>

      <ul>
      <% @vendedor.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nome, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :nome, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :pessoa, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :pessoa, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cpf, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :cpf, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :rg, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :rg, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cnpj, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :cnpj, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ie, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :ie, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :endereco, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :endereco, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :bairro, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :bairro, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cidade, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :cidade, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cep, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :cep, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :uf, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :uf, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :telefone, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :telefone, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Salvar", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<script>
$(document).ready(function() {
  $(window).keydown(function(event){
    if(event.keyCode == 13) {
      event.preventDefault();
      return false;
    }
  });
});

</script>


