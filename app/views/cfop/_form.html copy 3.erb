<%= form_for(@cfop, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @cfop.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4>Confira os campos abaixo:</h4>

      <ul>
      <% @cfop.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="ibox-content">
      <div class="row form-group">
          <div class="col-md-2">
            <%= f.label :cfop_de, 'CFOP' %>
            <%= f.text_field :cfop_de, class: "form-control" %>
          </div>

          <div class="col-md-2">
            <%= f.label :cfop_de_st, 'CFOP ST' %>
            <%= f.text_field :cfop_st_de, class: "form-control" %>
          </div>

          <div class="col-md-2">
            <%= f.label :cfop_fe, 'CFOP FE' %>
            <%= f.text_field :cfop_fe, class: "form-control" %>
          </div>

          <div class="col-md-2">
            <%= f.label :cfop_fe_st, 'CFOP ST FE' %>
            <%= f.text_field :cfop_st_fe, class: "form-control" %>
          </div>        
      </div>        

      <div class="row form-group">
          <div class="col-md-12">
            <%= f.label :descricao, 'Descrição' %>
            <%= f.text_field :descricao, class: "form-control" %>
          </div>
      </div>   

      <div class="row form-group">
          <div class="col-md-12">
            <%= f.label :natureza_operacao, 'Natureza Operação' %>
            <%= f.text_field :natureza_operacao, class: "form-control" %>
          </div>
      </div>

      <div class="row form-group">
          <div class="col-md-1">
            <%= f.label :operacao, 'Operação' %>
            <%= f.text_field :operacao, class: "form-control" %>
          </div>

          <div class="col-md-2">
            <%= f.label :nota_complementar_impostos_sn, 'Cpl Impostos ?' %>
            <%= f.select(:nota_complementar_impostos_sn, options_for_select([['SIM', 'S'], ['NÃO', 'N']]), {}, {class: "form-control"}) %>
          </div>
          
      </div>

      <div class="row form-group">
          <div class="col-md-12">
            <%= f.label :observacao, 'Observação' %>
            <%= f.text_field :observacao, class: "form-control" %>
          </div>
      </div>
</div>

<div class="form-group">
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Salvar", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<script>
//Bloqueia a tecla Enter no campo de Input
$(document).ready(function() {
  $(window).keydown(function(event){
    if(event.keyCode == 13) {
      event.preventDefault();
      return false;
    }
  });
});

</script>
