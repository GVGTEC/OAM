<%= form_for(@cfop, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @cfop.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4>Confira os campos abaixo:</h4>

      <ul>
      <% @cfop.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="ibox-content">
      <div class="row form-group">
          <div class="col-md-2">
            <%= f.label :cfop_de, 'CFOP' %>
            <%= f.text_field :cfop_de, class: "form-control" %>
          </div>

          <div class="col-md-2">
            <%= f.label :cfop_de_st, 'CFOP ST' %>
            <%= f.text_field :cfop_st_de, class: "form-control" %>
          </div>

          <div class="col-md-2">
            <%= f.label :cfop_fe, 'CFOP FE' %>
            <%= f.text_field :cfop_fe, class: "form-control" %>
          </div>

          <div class="col-md-2">
            <%= f.label :cfop_fe_st, 'CFOP ST FE' %>
            <%= f.text_field :cfop_st_fe, class: "form-control" %>
          </div>        
      </div>        

      <div class="row form-group">
          <div class="col-md-12">
            <%= f.label :descricao, 'Descrição' %>
            <%= f.text_field :descricao, class: "form-control" %>
          </div>
      </div>   

      <div class="row form-group">
          <div class="col-md-12">
            <%= f.label :natureza_operacao, 'Natureza Operação' %>
            <%= f.text_field :natureza_operacao, class: "form-control" %>
          </div>
      </div>

      <div class="row form-group">
          <div class="col-md-1">
            <%= f.label :operacao, 'Operação' %>
            <%= f.text_field :operacao, class: "form-control" %>
          </div>
      </div>

      
    </div>

  <div class="form-group">
    <%= f.label :entrada_saida_es, 'Entrada/Saída', class: "col-sm-1 control-label" %>
    <div class="col-sm-2">
      <%= f.text_field :entrada_saida_es, class: "form-control" %>
    </div>

    <%= f.label :cliente_fornecedor_cf, 'Cliente/Fornecedor', class: "col-sm-1 control-label" %>
    <div class="col-sm-2">
      <%= f.text_field :cliente_fornecedor_cf, class: "form-control" %>
    </div>

    <%= f.label :calcular_impostos_sn, 'Calcular Impostos ?', class: "col-sm-1 control-label" %>
    <div class="col-sm-2">
      <%= f.text_field :calcular_impostos_sn, class: "form-control" %>
    </div>

    <%= f.label :faturamento_sn, 'Faturamento ?', class: "col-sm-1 control-label" %>
    <div class="col-sm-2">
      <%= f.text_field :faturamento_sn, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :observacao, 'Observação', class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :observacao, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Salvar", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<script>
//Bloqueia a tecla Enter no campo de Input
$(document).ready(function() {
  $(window).keydown(function(event){
    if(event.keyCode == 13) {
      event.preventDefault();
      return false;
    }
  });
});

</script>
