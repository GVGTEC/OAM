<%= form_for(@cfop, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @cfop.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4>Confira os campos abaixo:</h4>

      <ul>
      <% @cfop.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :cfop_de, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :cfop_de, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cfop_st_de, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :cfop_st_de, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cfop_fe, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :cfop_fe, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cfop_st_fe, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :cfop_st_fe, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :descricao, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :descricao, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :natureza_operacao, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :natureza_operacao, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :natureza_operacao_st, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :natureza_operacao_st, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :operacao, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :operacao, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :nota_complementar_impostos_sn, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :nota_complementar_impostos_sn, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :entrada_saida_es, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :entrada_saida_es, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cliente_fornecedor_cf, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :cliente_fornecedor_cf, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :calcular_impostos_sn, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :calcular_impostos_sn, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :faturamento_sn, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :faturamento_sn, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :observacao, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :observacao, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Salvar", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
