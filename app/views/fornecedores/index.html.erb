<div class="page-header">
  <%= link_to new_fornecedor_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Fornecedor
  <% end %>
  <h1>Lista</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Nome</th>
            <th>Pessoa</th>
            <th>Cpf</th>
            <th>Rg</th>
            <th>Cnpj</th>
            <th>Ie</th>
            <th>Endereco</th>
            <th>Bairro</th>
            <th>Cidade</th>
            <th>Cep</th>
            <th>Uf</th>
            <th>Email</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @fornecedores) do |fornecedor| %>
            <td><%= fornecedor.nome %></td>
            <td><%= fornecedor.pessoa %></td>
            <td><%= fornecedor.cpf %></td>
            <td><%= fornecedor.rg %></td>
            <td><%= fornecedor.cnpj %></td>
            <td><%= fornecedor.ie %></td>
            <td><%= fornecedor.endereco %></td>
            <td><%= fornecedor.bairro %></td>
            <td><%= fornecedor.cidade %></td>
            <td><%= fornecedor.cep %></td>
            <td><%= fornecedor.uf %></td>
            <td><%= fornecedor.email %></td>
            <td><%= link_to 'Mostrar', fornecedor %></td>
        <td><%= link_to 'Editar', edit_fornecedor_path(fornecedor) %></td>
        <td><%= link_to 'Apagar', fornecedor, method: :delete, data: { confirm: 'Confirma ?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
