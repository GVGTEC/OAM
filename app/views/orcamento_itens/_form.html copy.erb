<%= form_for(@orcamento_item, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @orcamento_item.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4>Confira os campos abaixo:</h4>

      <ul>
      <% @orcamento_item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :orcamento, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :orcamento, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :produto, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :produto, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :quantidade, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :quantidade, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :preco_unitario, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :preco_unitario, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :preco_total, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :preco_total, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Salvar", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
