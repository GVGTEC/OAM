<%= form_for(@localizacao_estoque, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @localizacao_estoque.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4>Confira os campos abaixo:</h4>

      <ul>
      <% @localizacao_estoque.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :local, class: "col-sm-1 control-label" %>
    <div class="col-sm-5">
      <%= f.text_field :local, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :observacao, 'Observação', class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :observacao, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Salvar", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
