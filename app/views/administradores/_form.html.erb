<%= form_for(@administrador, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @administrador.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4>Confira os campos abaixo:</h4>

      <ul>
      <% @administrador.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :empresa, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.select :empresa_id, 
              Empresa.all.collect{|empresa| [empresa.nome, empresa.id]},
              {:selected => @administrador.empresa_id, :include_blank => true},
              {class: "form-control"} %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :nome, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :nome, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :email, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :senha, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :senha, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-1">
      <%= f.submit "Salvar", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
