<%= form_for(@cliente, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @cliente.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@cliente.errors.count, "error") %> prohibited this cliente from being saved:</h4>

      <ul>
      <% @cliente.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nome, 'Nome', class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :nome, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :pessoa, class: "col-sm-1 control-label" %>
    <div class="col-sm-1">
      <%= f.text_field :pessoa, class: "form-control" %>
    </div>

  </div>

  <div class="form-group">
    <%= f.label :cpf, 'CPF', class: "col-sm-1 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :cpf, class: "form-control" %>
    </div>
  
    <%= f.label :rg, 'RG', class: "col-sm-1 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :rg, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :cnpj, 'CNPJ', class: "col-sm-1 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :cnpj, class: "form-control" %>
    </div>
  
    <%= f.label :ie, class: "col-sm-1 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :ie, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :endereco, class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :endereco, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :bairro, class: "col-sm-1 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :bairro, class: "form-control" %>
    </div>
  
    <%= f.label :cidade, class: "col-sm-1 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :cidade, class: "form-control" %>
    </div>

    <%= f.label :codcidade_ibge, 'Cidade IBGE', class: "col-sm-1 control-label" %>
    <div class="col-sm-1">
      <%= f.text_field :codcidade_ibge, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :cep, 'CEP', class: "col-sm-1 control-label" %>
    <div class="col-sm-1">
      <%= f.text_field :cep, class: "form-control" %>
    </div>
  
    <%= f.label :uf, 'UF', class: "col-sm-1 control-label" %>
    <div class="col-sm-1">
      <%= f.text_field :uf, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "col-sm-1 control-label" %>
    <div class="col-sm-7">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>  

  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
